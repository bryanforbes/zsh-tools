root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
max_line_length = 120

[*.{c,cc,h}]
indent_size = 4

[*.rs]
indent_size = 4

[*.{py,pyi}]
max_line_length = 80
indent_size = 4

[*.{js,ts}]
max_line_length = 80

[*.swift]
indent_size = 4

[*.go]
indent_style = tab
indent_size = 8

[Makefile]
indent_style = tab
indent_size = 8

[*.pkl]
insert_final_newline = false
