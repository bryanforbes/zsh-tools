amends "package://github.com/jdx/hk/releases/download/v1.21.0/hk@1.21.0#/Config.pkl"
import "package://github.com/jdx/hk/releases/download/v1.21.0/hk@1.21.0#/Builtins.pkl"

local linters = new Mapping<String, Step> {
    ["prettier"] = (Builtins.prettier) {
      prefix = "pnpm exec"
    }
    ["eslint"] = (Builtins.eslint) {
      prefix = "pnpm exec"
    }

    ["ruff"] = (Builtins.ruff) {
      batch = true
    }
    ["ruff_format"] = (Builtins.ruff_format) {
      depends = "ruff"
    }
    ["basedpyright"] {
      glob = List("**/*.py", "**/*.pyi")
      check = "basedpyright {{ files }}"
      depends = "ruff_format"
      stomp = true
    }

    ["validate-json"] {
      glob = List("zsh-grammar/*.json")
      check = "python -m zsh_grammar.validate {{ files }}"
      depends = "prettier"
    }

    ["newlines"] = Builtins.newlines

    ["pkl"] {
        glob = "*.pkl"
        check = "pkl eval {{files}} >/dev/null"
    }
}

hooks {
    ["pre-commit"] {
        fix = true
        stash = "git"
        steps {
            ...linters
        }
    }
    // "fix" and "check" are special steps for `hk fix` and `hk check` commands
    ["fix"] {
        fix = true
        steps = linters
    }
    ["check"] {
        steps = linters
    }
}
